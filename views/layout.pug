doctype html
html
    head
        meta(charset="utf-8")
        title= title
        block style
            link(rel="stylesheet", href="/css/style.min.css")
            link(rel="shortcut icon", type="image/png", href="/img/favicon.png")
        script(src='https://code.jquery.com/jquery-1.11.1.js')
    body
        block header
            div(class="site-header")
                img(class="header-image", src="/img/header.jpg")
                div(class="site-info")
                    img(class="info-img", src="/img/me.jpg")
                    p(class="site-name") André Johansson
                    p(class="site-description") Express Me-page
        block navbar
            div(class="site-navbar")
                ul(class="navbar")
                    li(class="nav-link")
                        <a href="/">Home</a>
                    li(class="nav-link")
                        <a href="about">About</a>
                    li(class="nav-link")
                        <a href="report">Reports</a>
                    li(class="nav-link")
                        <a href="app">My App</a>
                    li(class="nav-link")
                        <a href="chat">Chat</a>
        block main
            main(class="main") Mainblock
        block footer
            div(class="site-footer")
                p © 2017 André Johansson
